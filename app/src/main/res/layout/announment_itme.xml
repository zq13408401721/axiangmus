<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_dianji"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_zhang"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_68"
        android:background="@drawable/whis"

        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        >
        <TextView
            android:id="@+id/zhang"
            android:layout_width="@dimen/dp_113"
            android:layout_height="@dimen/dp_16"
            android:text="19年物业费账单"
            />
        <TextView
            android:id="@+id/jie"
            android:layout_width="@dimen/dp_41"
            android:layout_height="@dimen/dp_14"
            android:layout_below="@id/zhang"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_10"
            android:text="未结清"
            android:textSize="@dimen/dp_12"
            />
        <ImageView
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_11"
            android:src="@mipmap/jinru"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_17"/>
    </RelativeLayout>

</RelativeLayout>
