<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presenter.acivity.Autonym_acivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/fan"
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_gravity="left"
            android:src="@mipmap/fanhuhei"/>
        <TextView
            android:id="@+id/fang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="实名认证"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/xin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="信息仅用于身份验证，实名认证后信息不可更改"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_below="@id/tl"/>
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_below="@id/xin"
        android:layout_height="@dimen/dp_140"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_15">
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入姓名"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@null"/>
        <TextView
            android:id="@+id/xain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/grey"
            android:layout_below="@id/et_name"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <EditText
            android:id="@+id/et_identity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入身份证号"
            android:layout_below="@+id/xain"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@null"/>
    </RelativeLayout>
    <Button
        android:id="@+id/bt_landings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shop"
        android:layout_below="@id/rl"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_58"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_30"
        android:text="确认认证"
        />
</RelativeLayout>