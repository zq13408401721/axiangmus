<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Neighborhood_Fragment">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_171"
            android:text="邻里"/>
        <ImageView
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_109"
            android:src="@mipmap/yinshen"
            />
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="16dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/jia"/>
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_79"
        android:layout_marginLeft="@dimen/dp_15"
        android:src="@mipmap/tongxunlu"
        />
    <TextView
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_65"
        android:layout_marginTop="@dimen/dp_90"
        android:textSize="@dimen/dp_13"
        android:text="@string/address"
        />
    <ImageView
        android:layout_width="@dimen/dp_7"
        android:layout_height="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_92"
        android:layout_marginLeft="@dimen/dp_354"
        android:src="@mipmap/jinru"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_134"
        android:background="@color/grey"/>
    <TextView
        android:id="@+id/message"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_159"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="@string/message"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/message"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_15"
        />


</RelativeLayout>