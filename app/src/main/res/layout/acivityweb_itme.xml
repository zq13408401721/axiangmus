<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <ImageView
          android:id="@+id/iv_tuWeb"
          android:layout_width="@dimen/dp_345"
          android:layout_height="@dimen/dp_147"
          android:scaleType="centerCrop"
          android:layout_marginLeft="@dimen/dp_15"
          android:layout_marginTop="@dimen/dp_10"
          android:src="@mipmap/mima"/>

      <TextView
          android:id="@+id/title_shidai"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="享受新食代"
          android:textSize="@dimen/dp_16"
          android:layout_below="@id/iv_tuWeb"
          android:layout_marginTop="@dimen/dp_20"
          android:layout_marginLeft="@dimen/dp_16"/>
      <View
          android:id="@+id/xian"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_1"
          android:layout_below="@id/title_shidai"
          android:layout_marginTop="@dimen/dp_15"
          android:layout_marginLeft="@dimen/dp_15"
          android:layout_marginRight="@dimen/dp_15"/>

      <ImageView
          android:id="@+id/iv_biao"
          android:layout_width="@dimen/dp_40"
          android:layout_height="@dimen/dp_40"
          android:layout_below="@id/xian"
          android:layout_marginTop="@dimen/dp_16"
          android:layout_marginLeft="@dimen/dp_15"
          android:src="@mipmap/tankuang"
          />
      <TextView
          android:id="@+id/faqi"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="活动发起者"
          android:textSize="@dimen/dp_14"
          android:layout_marginLeft="@dimen/dp_10"
          android:layout_marginTop="@dimen/dp_20"
          android:layout_below="@id/xian"
          android:layout_toRightOf="@id/iv_biao"/>
      <TextView
          android:id="@+id/tv_establish"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/dp_10"
          android:text="2019.08.28.15:50"
          android:layout_below="@id/xian"
          android:layout_marginTop="@dimen/dp_41"
          android:layout_marginLeft="@dimen/dp_10"
          android:layout_toRightOf="@id/iv_biao"
          />
      <TextView
          android:id="@+id/remark"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/iv_biao"
          android:layout_marginLeft="@dimen/dp_16"
          android:layout_marginTop="@dimen/dp_14"
          />
      <ImageView
          android:id="@+id/iv_tu"
          android:layout_width="@dimen/dp_345"
          android:layout_height="@dimen/dp_147"
          android:layout_below="@id/remark"
          android:layout_marginTop="@dimen/dp_13"
          android:layout_marginLeft="@dimen/dp_15"
          android:scaleType="centerCrop"
          />
      <TextView
          android:id="@+id/content"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/iv_tu"
          android:layout_marginTop="@dimen/dp_14"
          android:layout_marginLeft="@dimen/dp_16"
          />
      <RelativeLayout
          android:id="@+id/brief"
          android:layout_width="@dimen/dp_284"
          android:layout_height="@dimen/dp_195"
          android:layout_below="@id/content"
          android:layout_marginLeft="@dimen/dp_16"
          android:layout_marginTop="@dimen/dp_31"
          >

          <TextView
              android:id="@+id/shijian"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="活动时间："
              android:textSize="@dimen/dp_10"
              android:textColor="@color/grey"
              />
          <TextView
              android:id="@+id/jiezhi"
              android:layout_below="@id/shijian"
              android:layout_width="wrap_content"
              android:layout_marginTop="@dimen/dp_15"
              android:textSize="@dimen/dp_10"
              android:layout_height="wrap_content"
              android:text="报名截止："
              android:textColor="@color/grey"
              />
          <TextView
              android:id="@+id/dizhi"
              android:layout_below="@id/jiezhi"
              android:layout_width="wrap_content"
              android:layout_marginTop="@dimen/dp_15"
              android:textSize="@dimen/dp_10"
              android:layout_height="wrap_content"
              android:text="活动地址："
              android:textColor="@color/grey"
              />
          <TextView
              android:id="@+id/renshu"
              android:layout_marginTop="@dimen/dp_15"
              android:textSize="@dimen/dp_10"
              android:layout_below="@id/dizhi"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="报名人数："
              android:textColor="@color/grey"
              />

          <TextView
              android:id="@+id/feiyong"
              android:layout_below="@id/renshu"
              android:textSize="@dimen/dp_10"
              android:layout_marginTop="@dimen/dp_15"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="报名费用："
              android:textColor="@color/grey"
              />
          <TextView
              android:id="@+id/lianxiren"
              android:layout_below="@id/feiyong"
              android:layout_marginTop="@dimen/dp_15"
              android:textSize="@dimen/dp_10"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="联系人："
              android:textColor="@color/grey"
              />
          <TextView
              android:id="@+id/phone"
              android:layout_below="@+id/lianxiren"
              android:layout_width="wrap_content"
              android:textSize="@dimen/dp_10"
              android:layout_marginTop="@dimen/dp_15"
              android:layout_height="wrap_content"
              android:text="联系电话："
              android:textColor="@color/grey"
              />
          <TextView
              android:id="@+id/time"
              android:layout_width="match_parent"
              android:textSize="@dimen/dp_10"
              android:layout_toRightOf="@id/shijian"
              android:layout_height="wrap_content"
              android:text="时间"
              />
          <TextView
              android:id="@+id/upto"
              android:layout_width="match_parent"
              android:textSize="@dimen/dp_10"
              android:layout_toRightOf="@id/shijian"
              android:layout_marginTop="@dimen/dp_15"
              android:layout_below="@id/time"
              android:layout_height="wrap_content"
              android:text="截至"

              />
          <TextView
              android:id="@+id/site"
              android:layout_width="match_parent"
              android:textSize="@dimen/dp_10"
              android:layout_toRightOf="@id/shijian"
              android:layout_below="@id/upto"
              android:layout_marginTop="@dimen/dp_15"
              android:layout_height="wrap_content"
              android:text="地点"

              />
          <TextView
              android:id="@+id/number"
              android:layout_width="match_parent"
              android:textSize="@dimen/dp_10"
              android:layout_below="@id/site"
              android:layout_marginTop="@dimen/dp_15"
              android:layout_toRightOf="@id/shijian"
              android:layout_height="wrap_content"
              android:text="人数"

              />
          <TextView
              android:id="@+id/cost"
              android:layout_width="match_parent"
              android:textSize="@dimen/dp_10"
              android:layout_toRightOf="@id/shijian"
              android:layout_below="@id/number"
              android:layout_marginTop="@dimen/dp_15"
              android:layout_height="wrap_content"
              android:text="费用"

              />
          <TextView
              android:id="@+id/linkman"
              android:layout_width="match_parent"
              android:textSize="@dimen/dp_10"
              android:layout_toRightOf="@id/shijian"
              android:layout_below="@id/cost"
              android:layout_marginTop="@dimen/dp_15"
              android:layout_height="wrap_content"
              android:text="联系人"

              />
          <TextView
              android:id="@+id/linkmanPhone"
              android:layout_width="match_parent"
              android:textSize="@dimen/dp_10"
              android:layout_toRightOf="@id/shijian"
              android:layout_below="@id/linkman"
              android:layout_marginTop="@dimen/dp_15"
              android:layout_height="wrap_content"
              android:text="联系电话"

              />


      </RelativeLayout>
      <View
          android:id="@+id/xian1"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_10"
          android:layout_below="@id/brief"
          android:layout_marginTop="@dimen/dp_15"
          />
      <ImageView
          android:id="@+id/tu1"
          android:layout_width="@dimen/dp_40"
          android:layout_height="@dimen/dp_40"
          android:layout_marginTop="@dimen/dp_15"
          android:layout_marginLeft="@dimen/dp_15"
          android:layout_below="@id/xian1"
          android:src="@mipmap/jinru"/>
      <ImageView
          android:id="@+id/tu2"
          android:layout_width="@dimen/dp_40"
          android:layout_height="@dimen/dp_40"
          android:layout_marginTop="@dimen/dp_15"
          android:layout_marginLeft="@dimen/dp_36"
          android:layout_below="@id/xian1"
          android:src="@mipmap/jinru"/>
      <ImageView
          android:id="@+id/tu3"
          android:layout_width="@dimen/dp_40"
          android:layout_height="@dimen/dp_40"
          android:layout_marginTop="@dimen/dp_15"
          android:layout_marginLeft="@dimen/dp_55"
          android:layout_below="@id/xian1"
          android:src="@mipmap/jinru"/>
      <ImageView
          android:id="@+id/tu4"
          android:layout_width="@dimen/dp_40"
          android:layout_height="@dimen/dp_40"
          android:layout_marginTop="@dimen/dp_15"
          android:layout_marginLeft="@dimen/dp_81"
          android:layout_below="@id/xian1"
          android:src="@mipmap/jinru"/>
      <TextView
          android:id="@+id/num"
          android:layout_width="@dimen/dp_63"
          android:layout_height="@dimen/dp_15"
          android:layout_marginTop="@dimen/dp_28"
          android:layout_alignParentRight="true"
          android:layout_marginRight="@dimen/dp_17"
          android:layout_below="@id/xian1"
          android:text="asda"/>
      <View
          android:id="@+id/xian2"
          android:layout_width="@dimen/dp_345"
          android:layout_height="@dimen/dp_1"
          android:background="@color/grey"
          android:layout_below="@+id/num"
          android:layout_marginTop="@dimen/dp_15"
          />


  </RelativeLayout>
</ScrollView>