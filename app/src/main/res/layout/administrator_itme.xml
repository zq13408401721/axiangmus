<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_tou"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:src="@mipmap/jinru"
        />
    
    <TextView
        android:id="@+id/zhuhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="住户1"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_toRightOf="@id/iv_tou"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/fangzhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="房主"
        android:layout_below="@id/zhuhu"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_toRightOf="@id/iv_tou"
        android:layout_marginTop="@dimen/dp_13"
        android:textSize="13sp"/>
    <ImageView
        android:id="@+id/iv_phone"
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_13"
        android:src="@mipmap/dianhua"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_toRightOf="@id/fangzhu"
        android:layout_below="@id/zhuhu"
        />
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13147721694"
            android:textSize="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/zhuhu"
            android:layout_toRightOf="@id/iv_phone"
            />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/dp_23"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"/>
    <TextView
        android:id="@+id/hu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否是互播"
        android:layout_below="@id/phone"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_16"/>
</RelativeLayout>
