<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlf"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_185"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/iv_wuye"
            android:layout_width="@dimen/dp_31"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_120"
            android:layout_marginTop="@dimen/dp_26"
            android:src="@mipmap/wuyekefu"
            />
        <TextView
            android:id="@+id/steward"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_13"
            android:text="物业管家"
            android:textSize="@dimen/dp_14"
            android:layout_below="@id/iv_wuye"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_108"/>
        
        <TextView
            android:id="@+id/phone"
            android:layout_width="@dimen/dp_91"
            android:layout_height="@dimen/dp_14"
            android:layout_below="@+id/steward"
            android:layout_marginLeft="@dimen/dp_90"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="14sp"
            android:text="15843207153"
            />
        <Button
            android:id="@+id/hujiao"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_36"
            android:background="@color/colorbul"
            android:layout_below="@id/phone"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_45"
            android:text="呼叫"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/pop_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/rlf"
        android:layout_marginLeft="-33dp"
        android:layout_marginBottom="-33dp"
        android:layout_toRightOf="@+id/rlf"
        android:src="@mipmap/tankuang" />

</RelativeLayout>