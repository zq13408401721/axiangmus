<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whis"
    tools:context="com.goketech.smartcommunity.presenter.acivity.HourBinding_acivit">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/fan"
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_18"
            android:src="@mipmap/fanhuhei"/>
        <TextView
            android:id="@+id/fang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="绑定房屋"
            android:layout_marginLeft="@dimen/dp_129"
            />
    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/tv_xiugai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@id/tl"
        android:layout_marginTop="@dimen/dp_29"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="认证后信息不可修改"/>
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_306"
        android:layout_below="@id/tv_xiugai"
        android:background="@drawable/whis"
        android:layout_marginTop="@dimen/dp_15"
        >
        <EditText
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入真实姓名"
            android:textColor="@color/grey"
            android:textSize="@dimen/dp_16"
            android:background="@null"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_16"
            />
        <view
            android:id="@+id/xian"
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@id/et_name"/>
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入真实姓名"
            android:textColor="@color/grey"
            android:textSize="@dimen/dp_16"
            android:background="@null"
            android:layout_below="@id/xian"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_16"
            />
        <view
            android:id="@+id/xian1"
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@id/et_phone"/>

        <TextView
            android:id="@+id/select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="身份选择"
            android:layout_below="@id/xian1"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_17"/>
       <ImageView
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_11"
            android:src="@mipmap/jinru"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_below="@id/xian1"
            android:layout_marginTop="@dimen/dp_17"
            />
        <TextView
            android:id="@+id/louyu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="楼宇选择"
            android:layout_below="@id/select"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_17"/>
        <ImageView
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_11"
            android:src="@mipmap/jinru"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_below="@id/select"
            android:layout_marginTop="@dimen/dp_17"
            />
        <TextView
            android:id="@+id/building"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="单元选择"
            android:layout_below="@id/louyu"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_17"/>
        <ImageView
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_11"
            android:src="@mipmap/jinru"

            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_below="@id/louyu"
            android:layout_marginTop="@dimen/dp_17"
            />
        <TextView
            android:id="@+id/dan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="房间选择"
            android:layout_below="@id/building"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_17"/>
        <ImageView
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_11"
            android:src="@mipmap/jinru"

            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_below="@id/building"
            android:layout_marginTop="@dimen/dp_17"
            />

    </RelativeLayout>
    <Button
        android:layout_width="@dimen/dp_311"
        android:layout_height="@dimen/dp_40"
        android:text="确认"
        android:background="@drawable/shop"
        android:layout_below="@id/rl"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_60"/>
</RelativeLayout>
