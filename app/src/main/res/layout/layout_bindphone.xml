<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_34"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="9dp"
        android:layout_height="16dp"
        android:src="@mipmap/back"
        android:id="@+id/bindphone_back"/>

    <TextView
        android:id="@+id/bindphone_tv"
        android:text="@string/shurushoujihao"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_106"
        android:layout_marginLeft="@dimen/dp_57"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_23"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/bindphone_tvmsg"
        android:textSize="@dimen/sp_15"
        android:text="@string/fanzghidiushi"
        app:layout_constraintTop_toBottomOf="@id/bindphone_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_57"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <EditText
        android:id="@+id/bindphone_phonenum"
        android:layout_marginTop="@dimen/dp_217"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_83"
        android:layout_width="@dimen/dp_103"
        android:hint="@string/shurushoujihao"
        android:textSize="@dimen/sp_13"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/bindphone_code"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_83"
        android:layout_width="@dimen/dp_103"
        android:hint="@string/verification"
        android:layout_marginTop="@dimen/dp_262"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/bindphone_phonenum"
       app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/bindphone_phonenum"
       android:layout_marginLeft="@dimen/dp_247"
        android:textSize="@dimen/sp_15"
        android:text="@string/huoquyanzhengma"
        android:textColor="#00837B"
        android:id="@+id/bindphone_getcode"

        />
    <ImageView
       android:layout_marginRight="@dimen/dp_14"
        app:layout_constraintRight_toLeftOf="@id/bindphone_phonenum"
        app:layout_constraintTop_toTopOf="@id/bindphone_phonenum"
        app:layout_constraintBottom_toBottomOf="@id/bindphone_phonenum"
        android:layout_width="@dimen/dp_15"
        android:src="@mipmap/shoujihaoma"
        android:layout_height="@dimen/dp_17" />

    <ImageView
        app:layout_constraintTop_toTopOf="@id/bindphone_code"
        app:layout_constraintRight_toLeftOf="@id/bindphone_code"
        app:layout_constraintBottom_toBottomOf="@id/bindphone_code"
        android:layout_marginLeft="@dimen/dp_54"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="15dp"
        android:src="@mipmap/mima"
        android:layout_height="@dimen/dp_16" />
<Button
    android:id="@+id/wx_bind"
    android:layout_marginTop="@dimen/dp_330"
    android:layout_marginLeft="@dimen/dp_32"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_width="@dimen/dp_311"
    android:background="@color/colorbul"
    android:text="@string/bangding"
    android:textColor="@color/white"
    android:layout_height="@dimen/dp_32" />

    <TextView
        android:layout_marginTop="@dimen/dp_500"
        android:layout_marginLeft="@dimen/dp_80"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>
