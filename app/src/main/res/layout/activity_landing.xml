<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presenter.acivity.Landing_acivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/colorbul"></android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/background"
        android:layout_below="@+id/color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_256"
        android:background="@mipmap/tou"/>
    
    <RelativeLayout
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_500"
        android:layout_marginTop="@dimen/dp_180"
        android:layout_marginLeft="@dimen/dp_16"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_verificatiom"
            android:layout_width="@dimen/dp_74"
            android:layout_height="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_37"
            android:layout_marginLeft="@dimen/dp_81"
            android:text="验证码登陆"/>
        <TextView
            android:id="@+id/tv_passage"
            android:layout_width="@dimen/dp_59"
            android:layout_height="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_37"
            android:layout_marginLeft="@dimen/dp_196"
            android:text="密码登陆"/>
        <View
            android:id="@+id/v_vis"
            android:layout_width="@dimen/dp_107"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_65"
            android:layout_marginTop="@dimen/dp_61"
            android:background="@color/colorAccent"
            />
        <View
            android:id="@+id/v_viss"
            android:layout_width="@dimen/dp_107"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_61"
            android:layout_toRightOf="@id/v_vis"
            android:background="@color/colorAccent"
            />
        <View
            android:id="@+id/v_visss"
            android:layout_width="@dimen/dp_241"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_61"
            android:layout_marginLeft="@dimen/dp_65"
            android:layout_marginRight="@dimen/dp_65"
            />
        <FrameLayout
            android:id="@+id/fl_landing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/methods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="其他方式登陆"
            android:layout_marginTop="@dimen/dp_311"
            android:layout_marginLeft="@dimen/dp_133"
            android:layout_marginRight="@dimen/dp_133"
            />
        <ImageView
            android:id="@+id/WeChat"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_23"
            android:src="@mipmap/weixin"
            android:layout_marginTop="@dimen/dp_343"
            android:layout_marginLeft="@dimen/dp_158"
            android:layout_marginRight="@dimen/dp_158"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/warning"
            android:layout_marginTop="@dimen/dp_400"
            android:layout_marginRight="@dimen/dp_57"
            android:layout_marginLeft="@dimen/dp_57"/>

    </RelativeLayout>

</RelativeLayout>