<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presenter.acivity.Inform_acivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fan"
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_18"
            android:src="@mipmap/fanhuhei" />

        <TextView
            android:layout_width="@dimen/dp_71"
            android:layout_height="@dimen/dp_17"
            android:layout_gravity="center"
            android:text="消息中心" />



    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/inform"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_79"
        android:text="通知消息"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/broadcast"
        android:layout_width="@dimen/dp_61"
        android:layout_height="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_126"
        android:layout_marginTop="@dimen/dp_79"
        android:text="广播消息" />
    <FrameLayout
        android:id="@+id/fl_Inform"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/broadcast"
        android:layout_marginTop="@dimen/dp_15"
        />
    

</RelativeLayout>